@{
    Layout = "/Themes/Paperkit/Shared/_Layout.cshtml";
}

@model VideoStoreViewModel

<div id="fb-root"></div>
<script>
(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.6&appId=1724067881169895";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>


@Html.Partial("_Navigation", "videostore")

<div class="main-panel">
    @Html.Partial("_TopNavigation", "My Video Store")

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                
                    @foreach (var video in Model.Videos)
                    {
                        <div class="col-lg-4 col-md-5">
                            <div class="card">
                                <div class="content">
                                    <div class="row">
                                        <div class="col-md-offset-4 col-md-4">
                                            <h4>@video.Name</h4>
                                        </div>
                                    </div>
                                        
                                    <div class="row">
                                        <div class="col-md-8 col-md-offset-2">
                                            <input type="text" class="form-control border-input" value="@video.Url" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <img class="col-md-8 col-md-offset-2"  src="@video.ImagePath" />
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4 col-md-offset-4">
                                            <div class="fb-share-button" data-href="@video.Url" data-layout="icon" data-mobile-iframe="true"><a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=@{Uri.EscapeDataString(video.Url);} &amp;src=sdkpreparse">Share</a></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
            </div>
        </div>
    </div>
</div>