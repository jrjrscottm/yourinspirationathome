@using Hydrogen.Controllers
@inject ApplicationTenant Tenant
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="/themes/agel/images/agel.ico">
    <link rel="icon" type="image/png" href="/themes/agel/images/agel.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@Tenant.Name - Dashboard</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <!-- Bootstrap core CSS     -->
    <link href="/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Animation library for notifications   -->
    <link href="/css/animate.min.css" rel="stylesheet" />
    <!--  Paper Dashboard core CSS    -->
    <link href="/themes/paperkit/css/paperkit.css" rel="stylesheet" />

    <!--  Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css'>

    <!-- TODO: Switch all to fa-->
    <link href="/css/themify-icons.css" rel="stylesheet">
    <link href="/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>
<div class="wrapper">

    @RenderBody()
</div>

    <!--   Core JS Files   -->
    <script src="/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
    <!--  Checkbox, Radio & Switch Plugins -->
    <script src="/js/bootstrap/bootstrap-checkbox-radio.js"></script>
    <!--  Charts Plugin -->
    <script src="/themes/paperkit/scripts/paperkit.js"></script>
    <!--  Notifications Plugin    -->
    <script src="/js/bootstrap/bootstrap-notify.js"></script>
    
    @RenderSection("Scripts", false)

    @Html.RenderFlash()
</body>


</html>
