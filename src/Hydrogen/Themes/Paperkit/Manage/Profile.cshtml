@{
    Layout = "/Themes/Paperkit/Shared/_Layout.cshtml";
}

@model UserProfileModel

@Html.Partial("_Navigation", "profile")

<div class="main-panel">
    @Html.Partial("_TopNavigation", "User Profile")

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-4 col-md-5">
                    <div class="card card-user">
                        <div class="image">
                            @*<img src="assets/img/background.jpg" alt="..." />*@
                        </div>
                        <div class="content">
                            <div class="author">
                                <img class="avatar border-white" src="/themes/paperkit/images/face-0.jpg" alt="..." />
                                <h4 class="title">
                                    @Model.FirstName @Model.LastName<br />
                                    @*<a href="#"><small>@@chetfaker</small></a>*@
                                </h4>
                            </div>
                            <form action="/account/logoff" method="POST" class="description text-center">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-info btn-fill btn-wd">Signout</button>
                            </form>
                        </div>
                        <hr>
                        <div class="text-center">
                            <div class="row">
                                <div class="col-md-3 col-md-offset-1">
                                    <h5>12<br /><small>Enrolled</small></h5>
                                </div>
                                <div class="col-md-4">
                                    <h5>6<br /><small>Sponsored</small></h5>
                                </div>
                                <div class="col-md-3">
                                    <h5>$550<br /><small>Sales</small></h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="header">
                            <h4 class="title">Team Members</h4>
                        </div>
                        <div class="content">
                            <ul class="list-unstyled team-members">
                                <li>
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <div class="avatar">
                                                <img src="assets/img/faces/face-0.jpg" alt="Circle Image" class="img-circle img-no-padding img-responsive">
                                            </div>
                                        </div>
                                        <div class="col-xs-6">
                                            DJ Khaled
                                            <br />
                                            <span class="text-muted"><small>Offline</small></span>
                                        </div>
                                        <div class="col-xs-3 text-right">
                                            <btn class="btn btn-sm btn-success btn-icon"><i class="fa fa-envelope"></i></btn>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <div class="avatar">
                                                <img src="assets/img/faces/face-1.jpg" alt="Circle Image" class="img-circle img-no-padding img-responsive">
                                            </div>
                                        </div>
                                        <div class="col-xs-6">
                                            Creative Tim
                                            <br />
                                            <span class="text-success"><small>Available</small></span>
                                        </div>
                                        <div class="col-xs-3 text-right">
                                            <btn class="btn btn-sm btn-success btn-icon"><i class="fa fa-envelope"></i></btn>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <div class="avatar">
                                                <img src="assets/img/faces/face-3.jpg" alt="Circle Image" class="img-circle img-no-padding img-responsive">
                                            </div>
                                        </div>
                                        <div class="col-xs-6">
                                            Flume
                                            <br />
                                            <span class="text-danger"><small>Busy</small></span>
                                        </div>
                                        <div class="col-xs-3 text-right">
                                            <btn class="btn btn-sm btn-success btn-icon"><i class="fa fa-envelope"></i></btn>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8 col-md-7">
                    <form action="/manage/profile" method="POST" class="card">
                        <div class="header">
                            <h4 class="title">Edit Profile</h4>
                        </div>
                        <div class="content">
                            <form>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="EmailAddress">Email address</label>
                                            @Html.TextBoxFor(m => m.EmailAddress, new {@class = "form-control border-input", placeholder="Email", type="email", name="EmailAddress"})
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="FirstName">First Name</label>
                                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control border-input", placeholder = "First name", type = "text", name = "FirstName" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="LastName">Last Name</label>
                                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control border-input", placeholder = "Last name", type = "text", name = "LastName" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="ConsultantId">Consultant ID</label>
                                            @Html.TextBoxFor(m => m.ConsultantId, new { @class = "form-control border-input", disabled="disabled", type = "text", name = "ConsultantId" })
                                        </div>
                                    </div>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-info btn-fill btn-wd">Update Profile</button>
                                </div>
                                <div class="clearfix"></div>
                            </form>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>